<div>
  <%= link_to 'Add Food', new_food_path %>
</div>

<div>
  <table>
    <tr>
      <th>Food</th>
      <th>Measurement Unit</th>
      <th>Unit Price</th>
      <th>Actions</th>
    </tr>
    <% @foods.each do |food| %>
      <tr>
        <td><%= food.name %></td>
        <td><%= food.measurement_unit %></td>
        <td><%= "$#{food.price}" %></td>
        <td><%= button_to 'Delete', food_path(food), method: :delete %></td>
      </tr>
    <% end %>
  </table>
</div>
